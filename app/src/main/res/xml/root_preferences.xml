<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <PreferenceCategory app:title="@string/header">

        <SwitchPreferenceCompat
            app:key="disableAnimation"
            app:title="@string/disable_animation"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/photo">

        <SwitchPreferenceCompat
            app:key="photoQuality"
            app:title="@string/photo_quality"
            app:summary="@string/photo_quality_summary"/>

    </PreferenceCategory>

</PreferenceScreen>