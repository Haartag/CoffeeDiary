<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoffeeD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_purple</item>
        <item name="colorPrimaryVariant">@color/secondary_purple_dark2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_purple_light2</item>
        <item name="colorSecondaryVariant">@color/secondary_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:spinnerItemStyle">@style/MediumText</item>
    </style>
<!-- Text styles -->

    <style name="BigText" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/kurale_regular</item>
    </style>
    <style name="MediumText" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/kurale_regular</item>
    </style>
    <style name="SmallText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/kurale_regular</item>
        <item name="android:textColor">#88000000</item>
    </style>
    <style name="ButtonText" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/kurale_regular</item>
        <item name="android:textColor">@color/main_yellow</item>
    </style>

    <style name="InputHintText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/kurale_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/hint_background</item>
    </style>

    <style name="BottomNavMenu" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@color/secondary_purple_dark1</item>
        <item name="itemIconTint">@color/main_yellow</item>
        <item name="itemTextColor">@color/main_yellow</item>

    </style>






</resources>